[gd_resource type="Shader" format=2]

[resource]
code = "shader_type spatial;
render_mode unshaded;

vec2 rotate_space(vec2 uv, float angle) {
	angle = radians(angle);
	uv = uv - vec2(0.5);
	mat2 rot = mat2(vec2(sin(angle), -cos(angle)), vec2(cos(angle), sin(angle)));
	uv *= rot;
	uv = uv + vec2(0.5);
	return uv;
}

float box(vec2 pos, vec2 size, vec2 offset, float angle) {
	pos = pos + offset;
	vec2 edge = vec2(0.5) - size * 0.5;
    vec2 uv = smoothstep(edge, edge + vec2(0.001), pos);
    uv *= smoothstep(edge, edge + vec2(0.001), vec2(1.0) - pos);
    return uv.x * uv.y;
}

void fragment() {
	
	vec2 uv = UV;
	float col = 0.0;
	
	col += box(uv, vec2(0.2, 0.5), vec2(0, 0.25), 0);
	col += box(uv, vec2(0.2, 0.5), vec2(0.0, -0.25), 0);
	col += box(uv, vec2(0.5, 0.2), vec2(0.25, 0.0), 0);
	col += box(uv, vec2(0.5, 0.2), vec2(-0.25, 0.0), 0);
	
	uv = rotate_space(uv, 45);
	
	col += box(uv, vec2(0.2, 1.0), vec2(0, 0.25), 0);
	col += box(uv, vec2(0.2, 1.0), vec2(0.0, -0.25), 0);
	col += box(uv, vec2(1.0, 0.2), vec2(0.25, 0.0), 0);
	col += box(uv, vec2(1.0, 0.2), vec2(-0.25, 0.0), 0);
		
	ALBEDO = vec3(col);
	
}"
